<form action="https://samurai.feefighters.com/v1/payment_methods" method="POST">
    <fieldset>
        <input name="redirect_url" type="hidden" value="{{ samurai_form.redirect_url.value }}" />

        <input name="merchant_key" type="hidden" value="{{ samurai_form.merchant_key.value }}" />

        <input name="custom" type="hidden" value="{{ samurai_form.custom.value }}" />

        <label class="{% if samurai_form.first_name.error %} validation-error{% endif %}"
            for="credit_card_first_name">First name</label>
        <input class="field{% if samurai_form.first_name.error %} validation-error{% endif %}"
            id="credit_card_first_name" name="credit_card[first_name]" type="text" value="{{ samurai_form.first_name.value }}" />
        {% if samurai_form.first_name.error %}
            <p class="error-explanation">{{samurai_form.first_name.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.last_name.error %} validation-error{% endif %}"
            for="credit_card_last_name">Last name</label>
        <input class="field{% if samurai_form.last_name.error %} validation-error{% endif %}"
            id="credit_card_last_name" name="credit_card[last_name]" type="text" value="{{ samurai_form.last_name.value }}" />
        {% if samurai_form.last_name.error %}
            <p class="error-explanation">{{samurai_form.last_name.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.address_1.error %} validation-error{% endif %}"
            for="credit_card_address_1">Address 1</label>
        <input class="field{% if samurai_form.address_1.error %} validation-error{% endif %}"
            id="credit_card_address_1" name="credit_card[address_1]" type="text" value="{{ samurai_form.address_1.value }}" />
        {% if samurai_form.address_1.error %}
            <p class="error-explanation">{{samurai_form.address_1.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.address_2.error %} validation-error{% endif %}"
            for="credit_card_address_2">Address 2</label>
        <input class="field{% if samurai_form.address_2.error %} validation-error{% endif %}"
            id="credit_card_address_2" name="credit_card[address_2]" type="text" value="{{ samurai_form.address_2.value }}" />
        {% if samurai_form.address_2.error %}
            <p class="error-explanation">{{samurai_form.address_2.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.city.error %} validation-error{% endif %}"
            for="credit_card_city">City</label>
        <input class="field{% if samurai_form.city.error %} validation-error{% endif %}"
            id="credit_card_city" name="credit_card[city]" type="text" value="{{ samurai_form.city.value }}" />
        {% if samurai_form.city.error %}
            <p class="error-explanation">{{samurai_form.city.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.state.error %} validation-error{% endif %}"
            for="credit_card_state">State</label>
        <input class="field{% if samurai_form.state.error %} validation-error{% endif %}"
            id="credit_card_state" name="credit_card[state]" type="text" value="{{ samurai_form.state.value }}" />
        {% if samurai_form.state.error %}
            <p class="error-explanation">{{samurai_form.state.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.zip.error %} validation-error{% endif %}"
            for="credit_card_zip">Zip</label>
        <input class="field{% if samurai_form.zip.error %} validation-error{% endif %}"
            id="credit_card_zip" name="credit_card[zip]" type="text" value="{{ samurai_form.zip.value }}" />
        {% if samurai_form.zip.error %}
            <p class="error-explanation">{{samurai_form.zip.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.card_type.error %} validation-error{% endif %}"
            for="credit_card_card_type">Card Type</label>
        <br/>
        <br/>
        <select class="field{% if samurai_form.card_type.error %} validation-error{% endif %}"
            id="credit_card_card_type" name="credit_card[card_type]" >
        {% if samurai_form.card_type.value == "master" %}
            <option value="visa">Visa</option>
            <option value="master" selected="true">MasterCard</option>
        {% else %}
            <option value="visa" selected="true">Visa</option>
            <option value="master">MasterCard</option>
        {% endif %}
        </select>
        {% if samurai_form.card_type.error %}
            <p class="error-explanation">{{samurai_form.card_type.error}}</p><br />
        {% endif %}

        <br/>
        <br/>
        <br/>

        <label class="{% if samurai_form.card_number.error %} validation-error{% endif %}"
            for="credit_card_card_number">Credit Card Number</label>
        <input class="field{% if samurai_form.card_number.error %} validation-error{% endif %}"
            id="credit_card_card_number" name="credit_card[card_number]" type="text" value="{{ samurai_form.card_number.value }}" />
        {% if samurai_form.card_number.error %}
            <p class="error-explanation">{{samurai_form.card_number.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.verification_value.error %} validation-error{% endif %}"
            for="credit_card_verification_value">Security Code</label>
        <input class="field{% if samurai_form.verification_value.error %} validation-error{% endif %}"
            id="credit_card_verification_value" name="credit_card[cvv]" type="text" value="{{ samurai_form.verification_value.value }}" />
        {% if samurai_form.verification_value.error %}
            <p class="error-explanation">{{samurai_form.verification_value.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.expiry_month.error %} validation-error{% endif %}"
            for="credit_card_month">Expiry Month</label>
        <input class="field{% if samurai_form.expiry_month.error %} validation-error{% endif %}"
            id="credit_card_month" name="credit_card[expiry_month]" type="text" value="{{ samurai_form.expiry_month.value }}" />
        {% if samurai_form.expiry_month.error %}
            <p class="error-explanation">{{samurai_form.expiry_month.error}}</p><br />
        {% endif %}

        <label class="{% if samurai_form.expiry_year.error %} validation-error{% endif %}"
            for="credit_card_year">Expiry Year</label>
        <input class="field{% if samurai_form.expiry_year.error %} validation-error{% endif %}"
            id="credit_card_year" name="credit_card[expiry_year]" type="text" value="{{ samurai_form.expiry_year.value }}" />
        {% if samurai_form.expiry_year.error %}
            <p class="error-explanation">{{samurai_form.expiry_year.error}}</p><br />
        {% endif %}
    </fieldset>

    <input type='submit'/>
</form>

