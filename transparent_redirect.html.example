<form action="https://samurai.feefighters.com/v1/payment_methods" method="POST">
    <fieldset>
        <input name="redirect_url" type="hidden" value="{{ transparent_redirect_form_initial.redirect_url }}" />
        <input name="merchant_key" type="hidden" value="{{ transparent_redirect_form_initial.merchant_key }}" />
        <input name="custom" type="hidden" value="{{ transparent_redirect_form_initial.custom }}" />
        <label for="credit_card_first_name">First name</label>
        <input id="credit_card_first_name" name="credit_card[first_name]" type="text" value="{{ transparent_redirect_form_initial.first_name }}" />
        <label for="credit_card_last_name">Last name</label>
        <input id="credit_card_last_name" name="credit_card[last_name]" type="text" value="{{ transparent_redirect_form_initial.last_name }}" />
        <label for="credit_card_address_1">Address 1</label>
        <input id="credit_card_address_1" name="credit_card[address_1]" type="text" value="{{ transparent_redirect_form_initial.address_1 }}" />
        <label for="credit_card_address_2">Address 2</label>
        <input id="credit_card_address_2" name="credit_card[address_2]" type="text" value="{{ transparent_redirect_form_initial.address_2 }}" />
        <label for="credit_card_city">City</label>
        <input id="credit_card_city" name="credit_card[city]" type="text" value="{{ transparent_redirect_form_initial.city }}" />
        <label for="credit_card_state">State</label>
        <input id="credit_card_state" name="credit_card[state]" type="text" value="{{ transparent_redirect_form_initial.state }}" />
        <label for="credit_card_zip">Zip</label>
        <input id="credit_card_zip" name="credit_card[zip]" type="text" value="{{ transparent_redirect_form_initial.zip }}" />
        <label for="credit_card_card_type">Card Type</label>
        <select id="credit_card_card_type" name="credit_card[card_type]" >
        {% if transparent_redirect_form_initial.card_type == "master" %}
            <option value="visa">Visa</option>
            <option value="master" selected="true">MasterCard</option>
        {% else %}
            <option value="visa" selected="true">Visa</option>
            <option value="master">MasterCard</option>
        {% endif %}
        </select>
        <label for="credit_card_card_number">Card Number</label>
        {% if transparent_redirect_form_initial.last_four_digits %}
            <input id="credit_card_card_number" name="credit_card[card_number]" type="text" value="************{{ transparent_redirect_form_initial.last_four_digits }}"/>
        {% else %}
            <input id="credit_card_card_number" name="credit_card[card_number]" type="text" />
        {% endif %}
        <label for="credit_card_verification_value">Security Code</label>
        <input id="credit_card_verification_value" name="credit_card[cvv]" type="text" />
        <label for="credit_card_month">Expiry Month</label>
        <input id="credit_card_month" name="credit_card[expiry_month]" type="text" value="{{ transparent_redirect_form_initial.expiry_month }}" />
        <label for="credit_card_year">Expiry Year</label>
        <input id="credit_card_year" name="credit_card[expiry_year]" type="text" value="{{ transparent_redirect_form_initial.expiry_year }}" />
        <button type='submit'>Submit Payment</button>
    </fieldset>
</form>

